@model IEnumerable<Product>

        <div id="carouselExampleCaptions" class="carousel slide" data-ride="carousel">
            <ol class="carousel-indicators">
                @for (int i = 0; i < Model.Where(a => a.IsHome = true).Count(); i++)
                {
                    if (i == 0)
                    {
                        <li data-target="#carouselExampleCaptions" data-slide-to="@i" class="active"></li>
                    }
                    else
                    {
                        <li data-target="#carouselExampleCaptions" data-slide-to="@i"></li>
                    }
                }
            </ol>
            <div class="carousel-inner">
                @{ var index = 0;}
                @foreach (var item in Model.Where(a => a.IsHome = true).Take(3))
                {
                    if (index == 0)
                    {
                        <div class="carousel-item active">
                            <img src="~/img/@item.Image" style="width:100%" height="400"  />
                        </div>
                        index++;
                    }
                    else
                    {
                        <div class="carousel-item">
                            <a asp-controller="Product" asp-action="Details" asp-route-id="@item.ProductId">
                                <img src="~/img/@item.Image"style="width:100%" height="400"  />
                            </a>
                        </div>
                    }
                }
                <a class="carousel-control-prev" href="#carouselExampleCaptions" role="button" data-slide="prev">
                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                    <span class="sr-only">Previous</span>
                </a>
                <a class="carousel-control-next" href="#carouselExampleCaptions" role="button" data-slide="next">
                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                    <span class="sr-only">Next</span>
                </a>
            </div>
        </div>


