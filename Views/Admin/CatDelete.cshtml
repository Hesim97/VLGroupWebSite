@model VLGroupWebSite.Entity.Category
@{
    ViewData["Title"] = "CatDelete";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h3>Silmek istediyinizden eminsiniz?</h3>
<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
           Kategoriya adi
        </dt>
        <dd>
            @Html.DisplayFor(model => model.CategoryName)
        </dd>
    </dl>

    <form asp-action="CatDelete">
        <input type="hidden" asp-for="CategoryId" />
        <input type="submit" value="Sil" class="btn btn-danger" />
        <a class="btn btn-primary" asp-action="Cataloglist">Geri</a>
    </form>
</div>

