@model VLGroupWebSite.Entity.ProductAttribute

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


<h4>Mehsul Atribut</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="AtrCreate">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label  class="control-label">Atribut adı</label>
                <input asp-for="Attribute" class="form-control" />
                <span asp-validation-for="Attribute" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label  class="control-label">Dəyəri</label>
                <input asp-for="Value" class="form-control" />
                <span asp-validation-for="Value" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ProductId" class="control-label"></label>
                <select asp-for="ProductId" class="form-control" asp-items="ViewBag.ProductId"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Elave et" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a class="btn btn-primary" asp-action="AtrIndex">Geri</a>
</div>


