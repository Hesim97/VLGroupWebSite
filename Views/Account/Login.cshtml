@model LoginModel
@{
    ViewData["Title"] = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="text-danger" asp-validation-summary="All"></div>
<div style="width:38rem">
    <form asp-action="Login" method="post" class="form-signin">
        <h1 class="form-signin-heading text-muted">Daxil ol</h1>
        <input type="hidden" value="@ViewBag.returnUrl" name="returnUrl" />
        <div class="form-group">
            @*<label asp-for="Email"></label>*@
            <input asp-for="Email" type="text" class="form-control" placeholder="Email address" required="" autofocus="">
        </div>
        <div class="form-group">
            @*<label asp-for="Password"></label>*@
            <input asp-for="Password" type="password" class="form-control" placeholder="Password" required="">
        </div>
        <button class="btn btn-lg btn-primary btn-block" type="submit">
            Daxil ol
        </button>
    </form>
</div>
